<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="edu.uic.cs478.LocalLoggingService"
    android:targetSandboxVersion="2"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="21"
        android:targetSdkVersion="25" />

    <uses-permission android:name="course.examples.Services.LoggingServiceWithMessenger.PERMISSION" />

    <application
        android:allowBackup="false"
        android:debuggable="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:testOnly="true" >
        <activity
            android:name="edu.uic.cs478.ServiceWithPendingIntent.LoggingServiceClient"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service android:name="edu.uic.cs478.ServiceWithPendingIntent.LoggingService" />

        <receiver
            android:name="edu.uic.cs478.ServiceWithPendingIntent.LoggingReceiver"
            android:enabled="true"
            android:exported="false" >
        </receiver>
    </application>

</manifest>